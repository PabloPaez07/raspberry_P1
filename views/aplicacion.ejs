<script>
    function clickControlLuces()
    {
        var div_control_luces = document.getElementById('div_control_luces');
        var div_control_temp = document.getElementById('div_control_temp');

        div_control_luces.style.display = 'block';
        div_control_temp.style.display = 'none';
    }

    function clickControlTemp()
    {
        var div_control_luces = document.getElementById('div_control_luces');
        var div_control_temp = document.getElementById('div_control_temp');

        div_control_luces.style.display = 'none';
        div_control_temp.style.display = 'block';
    }
</script>

<script>
    function ajax_temp()
    {
        const http = new XMLHttpRequest();
        const ruta = document.URL + '/temp';

        http.onreadystatechange = function()
        {
            if(this.readyState == 4 && this.status == 200){
                console.log(this.responseText);
            }
        }

        http.open("GET", ruta);
        http.send();
    }

    document.getElementById("boton_temp");
</script>